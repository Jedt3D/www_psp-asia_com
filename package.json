{
  "name": "twlayout",
  "version": "1.2.0",
  "main": "postcss.config.js",
  "scripts": {
    "build": "tailwindcss -i public/css/styles/main.css -o public/css/dist/output.css --content \"./**/*.html\"",
    "watch": "tailwindcss -i public/css/styles/main.css -o public/css/dist/output.css --content \"./**/*.html\" --watch",
    "start": "npm run watch && open .",
    "test": "node tests/integration/build-test.js",
    "test:build": "npm run build && npm run test"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "description": "Tailwind CSS demo project with organized structure",
  "devDependencies": {
    "@types/node": "^20.11.0",
    "autoprefixer": "^10.4.21",
    "postcss": "^8.5.3",
    "tailwindcss": "^4.1.11"
  },
  "dependencies": {
    "@tailwindcss/cli": "^4.1.11"
  }
}
